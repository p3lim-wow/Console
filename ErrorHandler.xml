					<TexCoords left='0.125' right='0.001953125' top='0' bottom='1'/>
				</Texture>
			</Layer>
		</Layers>
		<TitleRegion>
			<Anchors>
				<Anchor point='TOPLEFT'>
					<Offset x='5' y='-4'/>
				</Anchor>
				<Anchor point='BOTTOMRIGHT' relativePoint='TOPRIGHT'>
					<Offset x='-5' y='-16'/>
				</Anchor>
			</Anchors>
		</TitleRegion>
		<Frames>
			<ScrollFrame name='$parentScroll'>
				<Anchors>
					<Anchor point='TOPLEFT'>
						<Offset x='12' y='-30'/>
					</Anchor>
					<Anchor point='BOTTOMRIGHT'>
						<Offset x='-12' y='12'/>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<EditBox name='$parentBox' multiLine='true' autoFocus='true'>
						<Size x='276' y='400'/>
						<Scripts>
							<OnTextSet>
								Console:Show()
							</OnTextSet>
							<OnEscapePressed>
								self:SetText('')
								Console:Hide()
							</OnEscapePressed>
						</Scripts>
						<FontString inherits='GameFontHighlightSmall'/>
					</EditBox>
				</ScrollChild>
				<Scripts>
					<OnMouseWheel>
						local scroll = self:GetVerticalScroll()
						if(delta > 0) then
							self:SetVerticalScroll(math.max(0, scroll - 20))
						else
							self:SetVerticalScroll(math.min(self:GetVerticalScrollRange(), scroll + 20))
						end
					</OnMouseWheel>
				</Scripts>
			</ScrollFrame>
		</Frames>
	</Frame>
</Ui>
