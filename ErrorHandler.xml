					</Anchors>
					<TexCoords left='0.25' right='0.369140625' top='0' bottom='1'/>
				</Texture>
				<Texture name='$parentBottomLeft' file='Interface\PaperDollInfoFrame\UI-GearManager-Border'>
					<Size x='64' y='64'/>
